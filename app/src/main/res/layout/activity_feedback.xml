<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FeedbackActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback"
                android:layout_centerInParent="true"
                android:layout_marginRight="?android:attr/actionBarSize"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/_14sdp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/please_rate_the_following_questions"
                    android:textColor="@color/colorBlack"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_14sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_q1"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_5_star"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/colorLightText"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_8sdp"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    style="?android:attr/ratingBarStyleIndicator"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feeback_q2"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_5_star"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/colorLightText"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_8sdp"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    style="?android:attr/ratingBarStyleIndicator"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_q3"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_5_star"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/colorLightText"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_8sdp"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    style="?android:attr/ratingBarStyleIndicator"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_q4"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/regular"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_5_star"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/colorLightText"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_8sdp"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    style="?android:attr/ratingBarStyleIndicator"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_q5"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/regular"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_5_star"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/colorLightText"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/_8sdp"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    style="?android:attr/ratingBarStyleIndicator"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/feedback_button_bg"
                android:text="@string/submit"
                android:layout_margin="@dimen/_16sdp"/>
        </LinearLayout>
    </ScrollView>





</LinearLayout>